<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_background"
    android:layout_height="match_parent"
    tools:context="com.example.deepak.healthcare.main_page" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/profile" />
        <ImageView
            android:id="@+id/search_history"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/add1" />
        <ImageView
            android:id="@+id/hospital"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/hospi3" />
        <ImageView
            android:id="@+id/about"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/info" />
        <ImageView
            android:id="@+id/feedback"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/feedback" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        android:layout_weight="1"
        android:padding="2dp"
        android:gravity="center"
        android:textSize="11sp"
        android:textColor="@color/text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/text_color"
        android:textSize="11sp"

        android:layout_height="wrap_content"
        android:text="Add Data" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/text_color"
        android:textSize="11sp"

        android:layout_height="wrap_content"
        android:text="Hospitals" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_color"
        android:textSize="11sp"

        android:gravity="center"
        android:padding="2dp"
        android:text="About" />

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/text_color"
        android:textSize="11sp"

        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:text="Feedback" />


</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content">
        <EditText
            android:id="@+id/dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Search Disease"
            android:textColor="@color/text_color"
            android:inputType="textPersonName"
             />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/dis_search"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/search2" />

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/symp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Search Symptoms"
android:textColor="@color/text_color"
            android:layout_weight="1"
            android:inputType="textPersonName"
             />

            <ImageView
                android:id="@+id/symp_search"
                android:layout_width="50dp"
                android:layout_marginTop="5dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/search2" />
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
