<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/chat_background"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.deepak.healthcare.profile">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Details" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:textColor="#000"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/app_detail" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="left"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Developer " />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textSize="18dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Deepak Kumar  " />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17dp"

            android:text="LinkedIn: " />
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:autoLink="web"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14dp"

            android:text="https://www.linkedin.com/in/deepak728/" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="7dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17dp"

            android:text="Github: " />
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:autoLink="web"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14dp"

            android:text="https://github.com/deepak728" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17dp"

            android:text="Facebook: " />
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:autoLink="web"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14dp"

            android:text="https://www.facebook.com/deepak728" />
    </LinearLayout>

</LinearLayout>
