<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/chat_background"
    android:orientation="vertical"

    tools:context="com.example.deepak.healthcare.About">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginTop="40dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="Personal Information" />
    <ImageView
        android:id="@+id/edit_image"
        android:layout_width="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/edit2" />
</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:textColor="#000"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Name :" />
        <TextView
            android:id="@+id/name_about"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17dp"

            android:textColor="#fff"

            android:layout_height="wrap_content"
            android:text="Deepak Kumar" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="17dp"

            android:layout_height="wrap_content"
            android:text="Email: " />
        <TextView
            android:id="@+id/email_about"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textSize="17dp"


            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="npe.deepak@gmail.com" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textSize="17dp"

            android:layout_weight="2"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Age: " />
        <TextView
            android:id="@+id/age_about"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17dp"

            android:text="21" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="17dp"

            android:layout_height="wrap_content"
            android:text="Blood Group: " />
        <TextView
            android:id="@+id/bg_about"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textSize="17dp"

            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="A+" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:textColor="#000"
            android:textSize="17dp"

            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Sex: " />
        <TextView
            android:id="@+id/sex_about"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textSize="17dp"

            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Male" />

    </LinearLayout>
